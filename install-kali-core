#!/bin/bash

# Kali Linux 核心工具集安装脚本（快速版本）

echo "========================================"
echo "  Kali Linux 核心工具集安装"
echo "========================================"
echo ""

# 检查是否在 Kali 容器中
if ! grep -q "kali" /etc/os-release 2>/dev/null; then
    echo "❌ 错误: 此脚本只能在 Kali Linux 中运行"
    exit 1
fi

# 检查是否为 root
if [ "$EUID" -ne 0 ]; then
    echo "❌ 请使用 root 权限运行此脚本"
    exit 1
fi

echo "【1/3】更新系统..."
apt update
apt upgrade -y

echo ""
echo "【2/3】安装 Kali 核心工具集..."
apt install -y kali-linux-core kali-linux-default

echo ""
echo "【3/3】清理..."
apt autoremove -y
apt clean

echo ""
echo "========================================"
echo "  ✓ Kali 核心工具集安装完成！"
echo "========================================"
echo ""
echo "已安装的工具包括："
echo "  - 网络扫描工具 (nmap, masscan)"
echo "  - Web 工具 (burpsuite, sqlmap)"
echo "  - 密码工具 (john, hashcat)"
echo "  - 无线工具 (aircrack-ng)"
echo "  - 更多..."
echo ""
echo "如需安装完整工具集，运行:"
echo "  /root/install-kali-everything"
echo ""
